<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_estate_proverty_form">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area"/>
                            <field name="garden_orientation"/>
                            <field name="is_active"/>
                            <field name="sequence"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_estate_proverty_tree">
            <field name="name">estate.property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="postcode"/>
                    <field name="date_availability"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="garden_orientation"/>
                    <field name="is_active"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_estate_property">
            <field name="name">Estate Property</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">kanban,tree,form</field>

        </record>
        <menuitem name="New Estate Property" id="add_estate_property" parent="estate_property" action="action_estate_property" sequence="10" />

    </data>
</odoo>